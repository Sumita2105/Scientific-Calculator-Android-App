<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:background="#696969"
        android:gravity="center|end"
        android:hint="0"
        android:maxLength="14"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sign_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center|end"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="#696969"
        android:textSize="20sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fbf7f5"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_log"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:backgroundTint="#fbf7f5"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_ln"
            android:text="ln"
            android:textAllCaps="false"
            android:backgroundTint="#fbf7f5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_power"
            android:backgroundTint="#fbf7f5"
            android:text="x^n"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_root"
            android:text="âˆš"
            android:backgroundTint="#fbf7f5"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_e"
            android:text="e^x"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="#fbf7f5"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:backgroundTint="#fbf7f5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="btn_sin"
            android:text="sin"
            android:textAllCaps="false"
            android:backgroundTint="#fbf7f5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_cos"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="#fbf7f5"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_tan"
            android:text="tan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="#fbf7f5"
            android:textSize="20sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#fbf7f5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_sinh"
            android:text="sinh"
            android:textAllCaps="false"
            android:backgroundTint="#fbf7f5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btn_cosh"
            android:text="cosh"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="#fbf7f5"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="btn_tanh"
            android:text="tanh"
            android:textAllCaps="false"
            android:backgroundTint="#fbf7f5"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_7"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_8"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_9"
            android:text="9"

            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#fbf7f5"
            android:onClick="btn_add"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <ImageButton

            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#fbf7f5"
            android:onClick="btn_delete"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_4"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_5"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_6"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#fbf7f5"
            android:onClick="btn_subtract"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#fbf7f5"
            android:onClick="btn_clear"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="btn_1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="btn_2"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="btn_3"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#fbf7f5"
                    android:onClick="btn_multiply"
                    android:text="Ã—"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:backgroundTint="#fbf7f5" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="btn_0"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#fbf7f5"
                    android:onClick="btn_pi"
                    android:text="pi"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#fbf7f5"
                    android:onClick="btn_dot"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#fbf7f5"
                    android:onClick="btn_divide"
                    android:text="Ã·"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <Button

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#FF7F50"
                android:onClick="btn_equal"
                android:text="="
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>